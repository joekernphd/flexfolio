<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/gradient_background2">


    <TextView
        android:id="@+id/settings_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/grey"
        android:gravity="center"
        android:text="SETTINGS"
        android:textAlignment="center"
        android:textColor="@color/superWhite"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/currentCurrency_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_title"
        android:layout_marginTop="15dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="Current Currency:"
        android:textColor="@color/superWhite"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/currentCurrency_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/currentCurrency_title"
        android:layout_alignBottom="@id/currentCurrency_title"
        android:layout_alignParentStart="true"
        android:layout_marginStart="137dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:textColor="@color/superWhite"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/currency_spinner"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/currentCurrency_title"
        android:layout_marginTop="15dp"
        android:entries="@color/superWhite"
        android:paddingLeft="12dp"
        android:dropDownSelector="@color/twitterBlue"
        android:popupBackground="@color/transSec"
        android:backgroundTint="@color/superWhite" />

    <TextView
        android:id="@+id/displayName_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/currency_spinner"
        android:layout_marginTop="31dp"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:text="Display Name:"
        android:textColor="@color/superWhite"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/edit_displayName"
        style="@android:style/Widget.ListView.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/displayName_title"
        android:backgroundTint="@color/superWhite"
        android:ems="10"
        android:padding="15dp"
        android:hint="Enter New Display Name"
        android:inputType="textPersonName"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/superWhite"
        android:textColorHint="@color/lightgrey"
        android:textColorLink="@color/superWhite"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textCursorDrawable="@color/twitterBlue"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="133dp"
        android:text="Submit" />

    <CheckBox
        android:id="@+id/privateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit_displayName"
        android:layout_marginTop="42dp"
        android:text="Private"
        android:textColor="@color/superWhite"
        android:buttonTint="@color/twitterBlue"
        />

</android.widget.RelativeLayout>